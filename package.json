{
  "name": "gh-actions-lockfile",
  "version": "0.0.3",
  "license": "AGPL-3.0-or-later",
  "description": "Generate and verify lockfiles for GitHub Actions dependencies",
  "author": "Garen Torikian",
  "workspaces": [
    "website"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gjtorikian/gh-actions-lockfile.git"
  },
  "homepage": "https://github.com/gjtorikian/gh-actions-lockfile#readme",
  "bugs": {
    "url": "https://github.com/gjtorikian/gh-actions-lockfile/issues"
  },
  "keywords": [
    "github-actions",
    "lockfile",
    "security",
    "dependency-management",
    "ci-cd"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "bin": {
    "gh-actions-lockfile": "./dist/cli.js"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outfile dist/cli.js --target node && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "package": "bun run build && bun pm pack",
    "docs:dev": "bun run --filter gh-actions-lockfile-website dev",
    "docs:build": "bun run --filter gh-actions-lockfile-website build",
    "docs:preview": "bun run --filter gh-actions-lockfile-website preview"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.33.0",
    "typescript": "^5.7.2"
  }
}
