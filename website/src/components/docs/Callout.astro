---
interface Props {
  type?: 'note' | 'warning' | 'important' | 'tip';
  title?: string;
}

const { type = 'note', title } = Astro.props;

const icons = {
  note: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>`,
  warning: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg>`,
  important: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 3h12l4 6-10 13L2 9Z"/><path d="M11 3 8 9l4 13 4-13-3-6"/><path d="M2 9h20"/></svg>`,
  tip: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/><path d="M9 18h6"/><path d="M10 22h4"/></svg>`,
};

const defaultTitles = {
  note: 'Note',
  warning: 'Warning',
  important: 'Important',
  tip: 'Tip',
};

const icon = icons[type];
const displayTitle = title ?? defaultTitles[type];
---

<div class:list={['callout', `callout-${type}`]}>
  {displayTitle && (
    <div class="callout-header">
      <span class="callout-icon" set:html={icon} />
      <p class="callout-title">{displayTitle}</p>
    </div>
  )}
  <div class="callout-content">
    <slot />
  </div>
</div>

<style>
  .callout {
    margin: 1.5rem 0;
    border-radius: 0.5rem;
    border-width: 1px;
    border-style: solid;
    padding: 1rem;
  }

  .callout-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .callout-icon {
    flex-shrink: 0;
  }

  .callout-title {
    font-weight: 600;
    margin: 0;
  }

  .callout-content {
    font-size: 0.875rem;
  }

  .callout-content :global(p) {
    margin-bottom: 0.5rem;
  }

  .callout-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .callout-content :global(code) {
    font-size: 0.75rem;
  }

  .callout-content :global(pre) {
    margin: 0.5rem 0;
    font-size: 0.75rem;
  }

  /* Note - Blue */
  .callout-note {
    background-color: #eff6ff;
    border-color: #bfdbfe;
  }
  .callout-note .callout-icon { color: #2563eb; }
  .callout-note .callout-title { color: #1e40af; }

  :global(.dark) .callout-note {
    background-color: rgba(30, 58, 138, 0.2);
    border-color: #1e40af;
  }
  :global(.dark) .callout-note .callout-icon { color: #60a5fa; }
  :global(.dark) .callout-note .callout-title { color: #93c5fd; }

  /* Warning - Yellow/Amber */
  .callout-warning {
    background-color: #fffbeb;
    border-color: #fde68a;
  }
  .callout-warning .callout-icon { color: #d97706; }
  .callout-warning .callout-title { color: #92400e; }

  :global(.dark) .callout-warning {
    background-color: rgba(120, 53, 15, 0.2);
    border-color: #92400e;
  }
  :global(.dark) .callout-warning .callout-icon { color: #fbbf24; }
  :global(.dark) .callout-warning .callout-title { color: #fcd34d; }

  /* Important - Purple */
  .callout-important {
    background-color: #faf5ff;
    border-color: #e9d5ff;
  }
  .callout-important .callout-icon { color: #9333ea; }
  .callout-important .callout-title { color: #6b21a8; }

  :global(.dark) .callout-important {
    background-color: rgba(88, 28, 135, 0.2);
    border-color: #6b21a8;
  }
  :global(.dark) .callout-important .callout-icon { color: #c084fc; }
  :global(.dark) .callout-important .callout-title { color: #d8b4fe; }

  /* Tip - Green */
  .callout-tip {
    background-color: #f0fdf4;
    border-color: #bbf7d0;
  }
  .callout-tip .callout-icon { color: #16a34a; }
  .callout-tip .callout-title { color: #166534; }

  :global(.dark) .callout-tip {
    background-color: rgba(20, 83, 45, 0.2);
    border-color: #166534;
  }
  :global(.dark) .callout-tip .callout-icon { color: #4ade80; }
  :global(.dark) .callout-tip .callout-title { color: #86efac; }
</style>
